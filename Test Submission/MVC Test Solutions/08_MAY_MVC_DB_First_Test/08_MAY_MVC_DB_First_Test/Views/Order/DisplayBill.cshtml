@model _08_MAY_MVC_DB_First_Test.Models.Order

<h1>Order Details</h1>
<div>
    <p>Order ID: @Model.OrderId</p>
    <p>Customer Name: @Model.Customer.ContactName</p>
    <p>Shipping Address: @Model.ShipAddress, @Model.ShipCity, @Model.ShipCountry</p>
    <!-- Add more details as needed -->
</div>

<h2>Order Items</h2>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@(item.Quantity * item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>
